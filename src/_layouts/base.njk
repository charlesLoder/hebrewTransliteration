<!DOCTYPE html>
<html lang="{{ config.lang }}">
  {% include "head.njk" %}
  <body data-set-preferred-mode-onload="true">
    {% set js %}
    {% include "node_modules/halfmoon/js/halfmoon.min.js" %}
    {% endset %}
    <!-- Halfmoon min js -->
    <script>{{ js | safe }}</script>
    {% for modal in modals %}
      <!-- Modal start -->
      {% include modal.src %}
      <!-- Modal end -->
    {% endfor %}
    <!-- Page wrapper start -->
    <div class="page-wrapper with-navbar">
      {% include "nav.njk" %}
      <!-- Content wrapper start -->
      <div class="content-wrapper position-static bg-light-lm">
        {% block content %}
          {{ content | safe }}
        {% endblock %}
      </div>
      <!-- Content wrapper end -->
    </div>
    <!-- Page wrapper end -->
    <script>
      const toggle = document.querySelector('#dm-toggle');
      toggle.addEventListener('click', () => halfmoon.toggleDarkMode())
    </script>
  </body>
</html>