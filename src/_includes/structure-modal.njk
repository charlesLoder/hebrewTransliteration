              <!-- Shaleshet -->
              <div class='mb-5'>
                <label for="0593">Shaleshet</label>
                <input type="text" class="form-control w-three-quarter" name="0593" id="0593"/>
              </div>
              <!-- Zaqef Qatan -->
              <div class='mb-5'>
                <label for="0594">Zaqef Qatan</label>
                <input type="text" class="form-control w-three-quarter" name="0594" id="0594"/>
