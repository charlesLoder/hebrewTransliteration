      <div class="form-group">
        <div class="container-sm">
          <div
            class="row">
            <!-- COLUMN 1 -->
            <div
              class="col-sm">
              <!-- Sof pasuq -->
              <div class='mb-5'>
                <label for="05C3">Sof pasuq</label>
                <input type="text" class="form-control w-three-quarter" name="05C3" id="05C3"/>
              </div>
              <!-- Athnah -->
              <div class='mb-5'>
                <label for="0591">Athnah</label>
                <input type="text" class="form-control w-three-quarter" name="0591" id="0591"/>
