        class="form-group d-flex flex-column">
        <!-- Schema select start -->
        <div class="schema-select-wrapper">
          <label for="schema-select">Either choose a transliteration schema from the list below:</label>
          <select class="form-control" id="select-schema" name="schema-select">
            {% for schema in config.schemas %}
              <option value="{{ schema.value }}">{{ schema.text }}</option>
            {% endfor %}
          </select>
        </div>
        <!-- Schema select end -->
        <!-- File input start -->
        <div class="file-input-wrapper mt-10">
          <div>
            Or upload your own:
          </div>
          <div class="custom-file">
            <input type="file" id="schema-input" accept=".json" class="w-full"/>
            <label for="schema-input" class="w-full">...</label>
          </div>
        </div>
        <!-- File input end -->
      </div>
      <a href="#" class="btn btn-success w-full" role="button">Use this schema!</a>
